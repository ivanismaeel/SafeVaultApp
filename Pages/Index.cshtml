@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to SafeVaultApp</h1>
    <p>Manage your sensitive data securely.</p>
</div>

<div class="container">
    <form method="post" asp-page="Submit" onsubmit="return validateForm()" class="mt-4">
        <div class="mb-3">
            <label for="username" class="form-label">Username:</label>
            <input type="text" id="username" name="Username" class="form-control">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" id="email" name="Email" class="form-control">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

<script src="~/js/validate.js"></script> <!-- Added validate.js for form validation -->
